  "author": "Vasily Guzov <vasily.guzov@gmail.com>",
  "license": "MIT",
  "scripts": {
    "stage:server": "cd public && npx browser-sync start --server --no-notify --no-ui --files *",
    "prestage:server": "yarn build",
    "build": "NODE_ENV=production webpack --mode=production",
    "postbuild": "yarn copy:files",
    "copy:files": "cp ./src/robots.txt ./src/.htaccess ./public",
    "dev": "webpack-dev-server",
    "predeploy": "yarn run build",
    "deploy": "gh-pages -d public"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "autoprefixer": "^9.5.0",
    "clean-webpack-plugin": "^2.0.1",
    "css-loader": "^2.1.1",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "file-loader": "^3.0.1",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "image-webpack-loader": "^4.6.0",
    "jimp": "^0.6.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "responsive-loader": "^1.2.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  }
}
